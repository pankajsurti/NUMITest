{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/NUMITest.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/NUMITest.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/NUMITest.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/NUMITest.csproj",
                "-c",
                "Release",
                "-o",
                "${workspaceFolder}/publish"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "start-iisexpress",
            "type": "shell",
            "command": "& '${env:ProgramFiles}\\IIS Express\\iisexpress.exe' /path:'${workspaceFolder}' /port:44300 /clr:v4.0",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Starting IIS Express",
                    "endsPattern": "^IIS Express is running"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "stop-iisexpress",
            "type": "shell",
            "command": "Stop-Process -Name 'iisexpress' -ErrorAction SilentlyContinue",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "build-and-start-iisexpress",
            "dependsOn": ["build", "start-iisexpress"],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}
